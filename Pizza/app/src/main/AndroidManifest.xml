<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.group5_mapd711_assign2_pizzaonline">
    <!--
         The ACCESS_COARSE/FINE_LOCATION permissions are not required to use
         Google Maps Android API v2, but you must specify either coarse or fine
         location permissions for the "MyLocation" functionality.
    -->
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.AddPizzaActivity"></activity>
        <activity android:name=".views.UpdateProfileActivity" />
        <activity android:name=".views.UserLoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="@string/google_maps_key" />

        <activity android:name=".views.SignUpActivity" />
        <activity android:name=".views.MainActivity" />
        <activity
            android:name=".views.MapsActivity"
            android:label="@string/title_activity_maps" />
        <activity android:name=".views.PizzaDetailsActivity" />
        <activity android:name=".views.CheckOutActivity" />
        <activity android:name=".views.CheckOutDetailsActivity" />
        <activity android:name=".views.Admin_CustomerOrder_Edit" />
    </application>

</manifest>