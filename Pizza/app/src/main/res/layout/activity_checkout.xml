<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="20dp"
    android:padding="5dp"
    tools:context=".views.CheckOutActivity">

    <TableRow>

        <TextView
            android:width="120dp"
            android:text=" First Name : "
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtFirstName"
            android:width="200dp" />
    </TableRow>

    <TableRow>

        <TextView
            android:width="120dp"
            android:text=" Last Name : "
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtLastName"
            android:width="200dp" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="120dp"
            android:text=" Address : "
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtAddr"
            android:width="200dp"
         />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="120dp"
            android:text=" City : "
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtCity"
            android:width="200dp"
         />
    </TableRow>


    <TableRow>

        <TextView
            android:layout_width="120dp"
            android:text=" Postal Code : "
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtPostalCode"
            android:width="200dp"
            android:inputType="textPostalAddress" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="120dp"
            android:text=" Mobile No. : "
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtMobileNumber"
            android:width="200dp"
            android:inputType="phone" />
    </TableRow>

    <TableRow tools:ignore="ExtraText">

        <TextView
            android:layout_width="120dp"
            android:text=" Card Type : "
            android:textSize="18dp"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/txtCardType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/array_cType"
            android:spinnerMode="dropdown" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="150dp"
            android:layout_height="60dp"
            android:text=" Credit Card Number : "
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtCCNum"
            android:width="200dp"
            android:inputType="number" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="120dp"
            android:text=" Expiry Date : "
            android:textSize="18dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtExpiryDate"
            android:width="200dp"
            android:inputType="phone" />
    </TableRow>

    <TableRow>

        <Button
            android:id="@+id/buttonOrder"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimaryDark"
            android:text="Order"
            android:textAlignment="center"
            android:textColor="#FFFFFF" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</TableLayout>